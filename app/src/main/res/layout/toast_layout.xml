<?xml version="1.0" encoding="utf-8"?>
<LinearLayout   android:id="@+id/toast_root"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:orientation="horizontal"
    android:layout_height="match_parent"
    android:background="@android:color/holo_purple"
    android:padding="8dp"

    >

    <ImageView     android:id="@+id/toast_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_toasticon"
        android:layout_marginEnd="8dp"

        />


    <TextView android:id="@+id/toast_text"
        android:layout_width="wrap_content"
        android:layout_height="19dp"
        android:text="This is My Toast"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        />
    <ImageView     android:id="@+id/toast_image_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_toasticon"
        android:layout_marginStart="8dp"

        />
</LinearLayout>